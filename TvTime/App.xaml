<Application
    x:Class="TvTime.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="using:TvTime.Common"
    xmlns:themes="using:WinUICommunity.LandingsPage.Themes">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="ms-appx:///SettingsUI/Themes/Generic.xaml"/>
                <ResourceDictionary Source="ms-appx:///LandingsPage/Themes/Generic.xaml"/>
                <themes:ItemTemplates/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Other app resources here -->
            <common:Text2BitmapIconConverter x:Key="Text2BitmapIconConverter"/>
            <common:PageType2BitmapIconConverter x:Key="PageType2BitmapIconConverter"/>
            <common:Bool2VisibilityConverter x:Key="Bool2VisibilityConverter"/>
            <common:String2VisibilityConverter x:Key="String2VisibilityConverter"/>
            <common:FileExtension2IconConverter x:Key="FileExtension2IconConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
