<Page
    x:Class="TvTime.Views.DetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TvTime.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DefaultBindMode="OneWay"
    xmlns:model="using:TvTime.Models"
    xmlns:wuc="using:WinUICommunity"
    mc:Ignorable="d">

    <Grid ChildrenTransitions="{StaticResource SettingsCardsAnimations}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="10,10,0,0" Spacing="10" Orientation="Horizontal">
            <Button Name="btnRefresh" Click="btnRefresh_Click">
                <StackPanel Spacing="10" Orientation="Horizontal">
                    <SymbolIcon Symbol="Refresh"/>
                    <TextBlock Text="Refresh"/>
                </StackPanel>
            </Button>
            <Button Name="btnDetails" Click="btnDetails_Click">
                <StackPanel Spacing="10" Orientation="Horizontal">
                    <SymbolIcon Symbol="PostUpdate"/>
                    <TextBlock Text="Details"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <BreadcrumbBar Name="breadcrumbBar" ItemClicked="breadcrumbBar_ItemClicked" ItemsSource="{x:Bind BreadcrumbBarList}" Margin="10,5,5,5" Grid.Row="1">
            <BreadcrumbBar.ItemTemplate>
                <DataTemplate x:DataType="model:LocalItem">
                    <TextBlock Text="{x:Bind Title}"/>
                </DataTemplate>
            </BreadcrumbBar.ItemTemplate>
        </BreadcrumbBar>
        <ListView Name="listView" Grid.Row="2" Margin="5,0,5,5" HorizontalAlignment="Stretch" ItemsSource="{x:Bind DataListACV}" SelectionMode="None">
            <ListView.Resources>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemSettingStyle}"/>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:LocalItem">
                    <wuc:SettingsCard ActionIcon="{x:Bind Server, Converter={StaticResource FileExtension2IconConverter}}" IsClickEnabled="True" Click="SettingsCard_Click" HeaderIcon="{x:Bind Title, Converter={StaticResource Text2BitmapIconConverter}}" Description="{x:Bind Server}" Header="{x:Bind Title}">
                        <Border Margin="5,0" CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}">
                            <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Margin="5,0,5,2">
                                        <Run Text="{x:Bind DateTime}"/>
                                        <Run Text="{x:Bind FileSize, Converter={StaticResource FileSizeConverter}}"/>
                            </TextBlock>
                        </Border>
                        <wuc:SettingsCard.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Tag="{x:Bind}" Text="Open Directory" Click="btnOpenDirectory_Click">
                                    <MenuFlyoutItem.Icon>
                                        <ImageIcon Source="ms-appx:///Assets/Images/Fluent/filePicker.png"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutItem Tag="{x:Bind}" Visibility="{x:Bind Server, Converter={StaticResource Bool2VisibilityConverter}}" Text="Open File" Click="btnOpenDirectory_Click">
                                    <MenuFlyoutItem.Icon>
                                        <ImageIcon Source="ms-appx:///Assets/Images/Fluent/file.png"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                                <MenuFlyoutSubItem Tag="{x:Bind}" Text="Copy Link(s)">
                                    <MenuFlyoutSubItem.Icon>
                                        <ImageIcon Source="ms-appx:///Assets/Images/Fluent/copy.png"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem Tag="{x:Bind}" Text="Copy Selected Item Link" Click="btnCopyDownloadLink_Click">
                                        <MenuFlyoutItem.Icon>
                                            <ImageIcon Source="ms-appx:///Assets/Images/Fluent/copy.png"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Tag="{x:Bind}" Text="Copy All Links" Click="btnCopyAllDownloadLinks_Click">
                                        <MenuFlyoutItem.Icon>
                                            <ImageIcon Source="ms-appx:///Assets/Images/Fluent/copy.png"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyoutSubItem>
                                <MenuFlyoutSubItem Tag="{x:Bind}" Text="Download With IDM">
                                    <MenuFlyoutSubItem.Icon>
                                        <ImageIcon Source="ms-appx:///Assets/Images/Fluent/idm.png"/>
                                    </MenuFlyoutSubItem.Icon>
                                    <MenuFlyoutItem Tag="{x:Bind}" Text="Download Selected Item With IDM" Click="btnDownloadWithIDM_Click">
                                        <MenuFlyoutItem.Icon>
                                            <ImageIcon Source="ms-appx:///Assets/Images/Fluent/idm.png"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                    <MenuFlyoutItem Tag="{x:Bind}" Text="Download All Items With IDM" Click="btnDownloadAllLinksWithIDM_Click">
                                        <MenuFlyoutItem.Icon>
                                            <ImageIcon Source="ms-appx:///Assets/Images/Fluent/idm.png"/>
                                        </MenuFlyoutItem.Icon>
                                    </MenuFlyoutItem>
                                </MenuFlyoutSubItem>
                            </MenuFlyout>
                        </wuc:SettingsCard.ContextFlyout>
                    </wuc:SettingsCard>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ProgressRing Grid.Row="2" IsActive="{x:Bind IsActive}"/>
        <InfoBar Grid.Row="3" Name="infoStatus" CornerRadius="4,4,0,0" Severity="Informational" IsOpen="True"/>
    </Grid>
</Page>
