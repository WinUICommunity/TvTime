<UserControl
    x:Class="TvTime.Views.LocalUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TvTime.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DefaultBindMode="OneWay"
    xmlns:model="using:TvTime.Models"
    Name="rootView"
    xmlns:controls="using:WinUICommunity.SettingsUI.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <InfoBar Name="infoStatus" Severity="Informational" IsOpen="True">
            <InfoBar.ActionButton>
                <Button MinWidth="220" Content="Update" Name="btnRefresh" Click="btnRefresh_Click"/>
            </InfoBar.ActionButton>
            <InfoBar.Content>
                <Button Margin="10" MinWidth="220" Click="btnServerStatus_Click" Name="btnServerStatus" Visibility="Collapsed">
                    <Grid>
                        <TextBlock Text="Server Status"/>
                        <InfoBadge x:Name="buttonInfoBadge" Margin="-50,0" Value="0" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    </Grid>
                </Button>
            </InfoBar.Content>
        </InfoBar>

        <AutoSuggestBox Name="txtSearch" QueryIcon="Find" Margin="10" TextChanged="txtSearch_TextChanged" PlaceholderText="Search" Grid.Row="1"/>

        <ListView Grid.Row="2" Margin="10" HorizontalAlignment="Stretch" ItemsSource="{x:Bind DataListACV}" SelectionMode="None">
            <ListView.Resources>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource ListViewItemSettingStyle}"/>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:LocalItem">
                    <Button Style="{StaticResource SettingButtonStyle}" Click="Button_Click">
                        <controls:Setting Icon="{Binding ElementName=rootView, Path=DataContext.ViewType, Converter={StaticResource ViewType2BitmapIconConverter}}" Description="{x:Bind Server}" Header="{x:Bind Title}" Style="{StaticResource ExpanderHeaderSettingStyle}">
                            <controls:Setting.ActionContent>
                                <StackPanel Orientation="Horizontal">
                                    <Border Visibility="{x:Bind DateTime, Converter={StaticResource String2VisibilityConverter}}" Margin="5,0" CornerRadius="{ThemeResource ControlCornerRadius}" Background="{ThemeResource SystemAccentColor}">
                                        <TextBlock Text="{x:Bind DateTime}" Style="{ThemeResource BaseTextBlockStyle}" Margin="5,0" Foreground="{ThemeResource SystemAltMediumHighColor}"/>
                                    </Border>
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xE8A7;"/>
                                </StackPanel>
                            </controls:Setting.ActionContent>
                        </controls:Setting>
                        <Button.ContextFlyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Tag="{x:Bind}" Text="Open Directory" Click="btnOpenDirectory_Click">
                                    <MenuFlyoutItem.Icon>
                                        <ImageIcon Source="ms-appx:///Assets/Images/folder.png"/>
                                    </MenuFlyoutItem.Icon>
                                </MenuFlyoutItem>
                            </MenuFlyout>
                        </Button.ContextFlyout>
                    </Button>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <ProgressRing IsActive="{x:Bind IsActive}" Grid.Row="2"/>
    </Grid>
</UserControl>
