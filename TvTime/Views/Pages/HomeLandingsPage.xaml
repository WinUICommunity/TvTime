<Page x:Class="TvTime.Views.HomeLandingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:i="using:Microsoft.Xaml.Interactivity"
      xmlns:ic="using:Microsoft.Xaml.Interactions.Core"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:wuc="using:WinUICommunity"
      mc:Ignorable="d">

    <wuc:AllLandingPage x:Name="allLandingPage"
                        HeaderImage="ms-appx:///Assets/Fluent/Cover1.jpg"
                        HeaderOverlayImage="ms-appx:///Assets/Fluent/Cover1.jpg"
                        HeaderText="{x:Bind TvTimeVersion}">
        <i:Interaction.Behaviors>
            <ic:EventTriggerBehavior EventName="OnItemClick">
                <ic:EventTriggerBehavior.Actions>
                    <ic:InvokeCommandAction Command="{x:Bind ViewModel.ItemClickCommand}" />
                </ic:EventTriggerBehavior.Actions>
            </ic:EventTriggerBehavior>
        </i:Interaction.Behaviors>
    </wuc:AllLandingPage>
</Page>
