<?xml version="1.0" encoding="utf-8" ?>
<ContentDialog x:Class="TvTime.Views.ContentDialogs.GoToServerContentDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               Title="Add New Servers"
               CloseButtonText="Cancel"
               CornerRadius="{ThemeResource OverlayCornerRadius}"
               DefaultButton="Primary"
               PrimaryButtonClick="ContentDialog_PrimaryButtonClick"
               PrimaryButtonText="Go To Servers"
               mc:Ignorable="d">

    <InfoBar Title="No servers found, please add some servers first"
             IsClosable="False"
             IsOpen="True"
             Message="Would you like to go to the servers page and add some servers?"
             Severity="Warning" />
</ContentDialog>
