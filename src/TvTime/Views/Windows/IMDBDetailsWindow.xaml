<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="TvTime.Views.IMDBDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:TvTime.Views"
        xmlns:wuc="using:WinUICommunity"
        mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <wuc:TitleBar x:Name="appTitleBar"
                      IsBackButtonVisible="False"
                      IsPaneButtonVisible="False">
            <wuc:TitleBar.Icon>
                <BitmapIcon ShowAsMonochrome="False"
                            UriSource="ms-appx:///Assets/Fluent/icon.png" />
            </wuc:TitleBar.Icon>
            <wuc:TitleBar.Content>
                <AutoSuggestBox x:Name="TxtSearch"
                                x:Uid="IMDBDetailWindow_TitleBarSearch"
                                MinWidth="360"
                                QueryIcon="Find"
                                QuerySubmitted="AutoSuggestBox_QuerySubmitted" />
            </wuc:TitleBar.Content>
        </wuc:TitleBar>
        <views:IMDBDetailsPage x:Name="ImdbDetailsPage"
                               Grid.Row="1" />
    </Grid>
</Window>
